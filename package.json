{
    "name": "work-track",
    "version": "1.0.0",
    "description": "Detaylı ajanda ve proje takip uygulaması",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "dev": "electron . --dev",
      "build": "electron-builder",
      "dist": "electron-builder --publish=never"
    },
    "keywords": [
      "electron",
      "todo",
      "productivity",
      "glassmorphism"
    ],
    "author": "Work Track",
    "license": "MIT",
    "devDependencies": {
      "electron": "^28.0.0",
      "electron-builder": "^24.9.1"
    },
    "build": {
      "appId": "com.worktrack.app",
      "productName": "Work Track",
      "directories": {
        "output": "dist"
      },
      "files": [
        "**/*",
        "!node_modules",
        "!dist"
      ],
      "win": {
        "target": "nsis",
        "icon": "assets/icon.ico"
      },
      "mac": {
        "target": "dmg",
        "icon": "assets/icon.icns"
      },
      "linux": {
        "target": "AppImage",
        "icon": "assets/icon.png"
      }
    }
  }